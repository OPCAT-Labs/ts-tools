{
  "compilerOptions": {
    "types": ["reflect-metadata", "mocha"],
    "module": "commonjs",
    "target": "es2021",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["es2021", "DOM"],
    "plugins": [
      {
        "transform": "../dist/index.js",
        "transformProgram": "true",
        "outDir": "artifacts",
        "debug": true
      }
    ]
  },
  "include": [
    // "./contracts/state.ts",
    // "./contracts/ctx.ts",
    "./contracts/*.ts",
    //"./contracts/b2G.ts",
    // "./contracts/b2G2.ts",
  ],
  "exclude": [
    "out",
    "artifacts",

  ]
}
