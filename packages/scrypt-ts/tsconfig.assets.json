{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "rootDir": "./src",
    "plugins": [
      {
        "transform": "../scrypt-ts-transpiler/dist/index.js",
        "transformProgram": "true",
        "outDir": "./assets",
        "debug": true
      }
    ]
  },
  "include": ["src/smart-contract/builtin-libs/*.ts"],
  "exclude": ["out", "artifacts"]
}