{
  "name": "@opcat-labs/examples",
  "version": "2.0.0",
  "private": true,
  "type": "commonjs",
  "description": "A demo sCrypt smart contract.",
  "author": "OP_CAT Labs",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "artifacts",
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean && npm run compile",
    "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json && npx -y cpy-cli artifacts dist/ ",
    "clean": "rimraf scrypt.index.json && rimraf dist && rimraf artifacts",
    "compile": "scrypt-cli-opcat compile",
    "pretest": "npm run build",
    "test": "npm run test:mocha",
    "test:mocha": "cross-env DUMMY_PROVIDER=1 mocha --no-timeouts",
    "test:testnet": "cross-env NETWORK=opcat-testnet mocha --no-timeouts",
    "genprivkey": "npx tsx tests/utils/privateKey.ts",
    "lint": "eslint . --ext .js,.ts --fix && prettier --write --ignore-unknown \"**/*\"",
    "lint-check": "eslint . --ext .js,.ts && prettier --check --ignore-unknown \"**/*\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.{ts,js}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@opcat-labs/scrypt-ts-opcat": "2.0.0"
  },
  "devDependencies": {
    "@opcat-labs/cli-opcat": "2.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3"
  },
  "license": "MIT"
}